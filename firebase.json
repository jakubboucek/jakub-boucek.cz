{
  "hosting": {
    "public": "public",
    "redirects": [ {
      "source" : "/blog/**",
      "destination" : "https://blog.jakub-boucek.cz/",
      "type" : 301
    } ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "**/assets/**"
    ],
    "headers": [{
      "source": "**",
      "headers": [{
        "key" : "Cache-Control",
        "value" : "max-age=3600"
      },
      {
        "key" : "X-Frame-Options",
        "value" : "SAMEORIGIN"
      },
      {
        "key" : "X-XSS-Protection",
        "value" : "1; mode=block"
      },
      {
        "key" : "X-Content-Type-Options",
        "value" : "nosniff"
      }]
    }]
  }
}
