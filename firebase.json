{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "redirects": [
      {
        "source" : "/index",
        "destination" : "/",
        "type" : 301
      },
      {
        "source" : "/blog/**",
        "destination" : "https://blog.jakub-boucek.cz/",
        "type" : 301
      },
      {
        "source" : "/dekuji{,/}",
        "destination" : "https://form.simpleshop.cz/nkkQ/",
        "type" : 302
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "**/assets/**"
    ],
    "headers": [{
      "source": "**",
      "headers": [{
        "key" : "Cache-Control",
        "value" : "max-age=3600"
      },
      {
        "key" : "X-Frame-Options",
        "value" : "SAMEORIGIN"
      },
      {
        "key" : "X-XSS-Protection",
        "value" : "1; mode=block"
      },
      {
        "key" : "X-Content-Type-Options",
        "value" : "nosniff"
      }]
    }]
  }
}
